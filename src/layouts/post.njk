---
layout: base
---
<article class="container">

    <header class="title-container">
        <div class="cover">
            {% if cover %}
                {% image
                    cover,
                    "photoclass",
                    "",
                    "(min-width: 30em) 50vw, 100vw",
                    false
                %}
            {% else %}
                <div class="no-img">{{ ["✾","❀","✿","✺","✯","✻","❂","✧","✣"] | random }}</div>
            {% endif %}
        </div>
        <div class="title">
            <h1 class="u-float-right">{{ title | wrapFirstLetters | safe }}</h1>
            <div class="date">
                {{ date.getUTCFullYear() }}&#xEFD1;{{ (date.getUTCMonth() + 1).toString().padStart(2, '0') }}&#xEFD1;{{ date.getUTCDate().toString().padStart(2, '0') }}
            </div>
        </div>

    </header>

    <ul class="tags-list"> 
        {% for tag in tags -%}
            {% if tag !== 'posts' %}
                <li>
                    <a class="tag" href="/tags/{{ tag }}">#{{ tag }}</a>
                </li>
            {% endif %}
        {%- endfor %}
    </ul>

    <div class="entry-content">
        {{ content | safe }}
    </div>
</article>