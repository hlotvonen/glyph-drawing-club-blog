    <ul>
      <li>2024: <a href="/font-with-built-in-syntax-highlighting/">Font with Built-In Syntax Highlighting</a>
      <li>2024: <a href="/typographic-art-of-valto-malmiola/">Typographic Art of Valto Malmiola</a>
    </ul>
  </article>

<!-- Tutorials -->
  <h1>Tutorials</h1>
  <ul class="posts-grid">
    {% for post in collections.Tutorial %}
      <li{% if page.url == post.url %} aria-current="page"{% endif %}>
        
        <div class="cover">
          <a href="{{ post.url }}">
            {% if post.data.cover %}
              {% image
                post.data.cover,
                "photoclass",
                "",
                "(min-width: 30em) 50vw, 100vw",
                false
              %}
            {% else %}
                <div class="no-img">{{ ["✾","❀","✿","✺","✯","✻","❂","✧","✣"] | random }}</div>
            {% endif %}
          </a>
        </div>
        
        <div>
          <a href="{{ post.url }}">
            <h2>{{ post.data.title }}</h2>
          </a>
          {{ post.data.description }}
          <ul class="frontpage-tags-list"> 
            {% for tag in post.data.tags -%}
              {% if tag !== 'posts' %}
                <li>
                  <a class="tag" href="/tags/{{ tag }}">#{{ tag }}</a>
                </li>
              {% endif %}
            {%- endfor %}
          </ul>
          {% if 'Post' in post.data.tags %}
            
          {% endif %}
        </div>
      </li>
    {% endfor %}
  </ul>

